<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".encoder.EncoderFragment">

    <EditText
        android:id="@+id/inputView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:hint="Исходная строка"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:autofillHints="" />

    <Button
        android:id="@+id/encodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Зашифровать строку"
        app:layout_constraintEnd_toEndOf="@+id/inputView"
        app:layout_constraintStart_toStartOf="@+id/inputView"
        app:layout_constraintTop_toBottomOf="@+id/inputView" />

    <Button
        android:id="@+id/decodeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:text="Расшифровать строку"
        app:layout_constraintEnd_toEndOf="@+id/encodeButton"
        app:layout_constraintStart_toStartOf="@+id/encodeButton"
        app:layout_constraintTop_toBottomOf="@+id/encodeButton" />

</androidx.constraintlayout.widget.ConstraintLayout>